// Place your key bindings in this file to overwrite the defaults
{
    "name": "Mac",
    "editor.rulers": [88],
    "includePath": ["/usr/local/include",
        "/path/to/additional/includes",
        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.11.sdk/usr/include"
    ],
    "team.showWelcomeMessage": false,
    "explorer.confirmDelete": false,
    "C_Cpp.updateChannel": "Insiders",
    "code-runner.runInTerminal": true,
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c11",
    "code-runner.enableAppInsights": false,
    "code-runner.clearPreviousOutput": true,
    "code-runner.executorMap": {
        "cpp": "g++ -Wall -Weverything $fullFileName && ./a.out"
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "workbench.editor.enablePreview": false,
    "python.testing.pytestEnabled": true,
    "editor.suggestSelection": "first",
    "workbench.startupEditor": "none",
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "cmake.configureOnOpen": true,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.fontFamily": "menlo for powerline",
    "terminal.external.osxExec": "/Applications/iTerm.app",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.showExitAlert": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "c-cpp-flylint.clang.pedantic": true,
    "c-cpp-flylint.flexelint.executable": "cppcheck",
    "security.workspace.trust.untrustedFiles": "open",
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex -> biber -> pdflatex*2",
            "tools": [
                "pdflatex",
                "biber",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    "workbench.editor.wrapTabs": true,
    "vim.vimrc.enable": true,
    "ltex.additionalRules.motherTongue": "en-GB",
    "ltex.language": "en-GB",
    "security.workspace.trust.enabled": false,
    "autoDocstring.docstringFormat": "numpy",
    "redhat.telemetry.enabled": false,
    "jupyter.alwaysTrustNotebooks": true,
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    "python.languageServer": "Pylance",
    "python.analysis.exclude": ["**/mlruns"],
    "cSpell.userWords": [
        "csvsql",
        "dtype",
        "dtypes",
        "fpath",
        "fpaths",
        "idata",
        "MCMC",
        "Metrolopis",
        "Overstone",
        "psql"
    ],
    "files.trimTrailingWhitespace": true,
    "cSpell.language": "en-GB",
    "editor.inlineSuggest.enabled": true,
    "[sql]": {
        "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
    },
    "clang-tidy.executable": "/usr/local/opt/llvm/bin/clang-tidy",
    "clang-tidy.compilerArgs": [
        "-std=c++20"
    ],
    "C_Cpp.codeAnalysis.clangTidy.codeAction.showDocumentation": true,
    "C_Cpp.codeAnalysis.clangTidy.enabled": false,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "workbench.colorTheme": "Tokyo Storm AltSynt",
    "window.menuBarVisibility": "toggle",
    "gtkTitleBar.mode": "dark",
    "window.titleBarStyle": "custom",
    "notebook.outline.showCodeCells": true,
    "jupyter.askForKernelRestart": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "black",
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "aws.telemetry": false,
    "python.diagnostics.sourceMapsEnabled": true,
    "python.experiments.enabled": false,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "csharp.inlayHints.enableInlayHintsForTypes": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
    "javascript.inlayHints.enumMemberValues.enabled": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "javascript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.inlayHints.parameterTypes.enabled": true,
    "python.analysis.inlayHints.variableTypes": true,
    "git.openRepositoryInParentFolders": "never",
    "python.analysis.addImport.exactMatchOnly": true,
    "python.analysis.autoImportCompletions": true,
    "notebook.lineNumbers": "on",
    "workbench.editorAssociations": {
        "*.xls": "default"
    },
    "git.confirmSync": false,
}