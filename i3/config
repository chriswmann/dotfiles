workspace 1 output HDMI1
workspace 10 output eDP1

exec blueman-applet
exec pasystray
exec nm-applet
exec dropbox
# exec onedrive --synchronize --single-directory blender
exec picom
exec volnoti
exec i3-msg 'workspace 10; exec /usr/bin/slack'
exec i3-msg 'workspace 10; exec /usr/bin/zoom'
